{
  "name": "prisma-express",
  "version": "1.0.0",
  "description": "PrismaXpress is a backend starter template using TypeScript, Express.js, Prisma ORM, and PostgreSQL. It follows the modular pattern and includes essential middleware, utility functions.",
  "main": "index.js",
  "author": "Fahim Ahammed Firoz",
  "license": "MIT",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "pino": "^9.6.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@prisma/client": "^6.3.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}